#!/bin/bash
ARGS=$@
OWNER=raniemi
PROJECT=elixir_examples
SRC_DIR=/code

REPOSITORY=$OWNER/$PROJECT
CONTAINER_HOME=$SRC_DIR/$PROJECT
CONTAINER_MIX_HOME=$CONTAINER_HOME/.mix

docker run -it --rm --name $PROJECT -e "MIX_HOME=$CONTAINER_MIX_HOME" -v "$PWD":$CONTAINER_HOME -w $CONTAINER_HOME $REPOSITORY bash -c "$ARGS"
